@page "/register"

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<body class="m-0">
    <div class="container-fluid cirsa-bg">
        <div class="justify-content-center mw-85 p-4 content-blured">
            <h2 class="text-md-start mt-3">Registro</h2>
            <p class="text-light ">Regístrate utilizando tus credenciales para obtener acceso a nuestra plataforma</p>

            <div class="mt-5 mb-4">
                <div class="col">
                    <label class="form-label">Correo electrónico:</label>
                    <input type="email" class="form-control form-control-lg" placeholder="correo.ejemplo@correo.es" />

                    <div class="form-outline form-white mb-4" />

                    <div class="row">
                        <div class="col">
                            <label class="form-label">Nombre:</label>
                            <input type="text" class="form-control form-control-lg" placeholder="nombre" />
                        </div>
                        <div class="col ml-2">
                            <label class="form-label">Apellido:</label>
                            <input type="text" class="form-control form-control-lg" placeholder="apellido" />
                        </div>
                    </div>

                    <div class="form-outline form-white mb-4" />

                    <label class="form-label">Teléfono:</label>
                    <input type="text" class="form-control form-control-lg" placeholder="+00 000 000 000" />

                    <div class="form-outline form-white mb-4" />

                    <label class="form-label">Contraseña:</label>
                    <input type="password" class="form-control form-control-lg" placeholder="ejemplo@Credencial123!" />

                    <div class="form-outline form-white mb-4" />

                    <label class="form-label">Confirma la contraseña:</label>
                    <input type="password" class="form-control form-control-lg" placeholder="ejemplo@Credencial123!" />
                </div>
            </div>

            <button class="btn btn-lg px-5 w-100 mb-2" type="submit" style="width: 100%; background-color: #f1bf32;">Registrarse</button>
            <button class="btn btn-outline-light btn-lg px-5 w-100 mt-4" type="submit" style="width: 100%;">Crear cuenta</button>
        </div>
    </div>
</body>

