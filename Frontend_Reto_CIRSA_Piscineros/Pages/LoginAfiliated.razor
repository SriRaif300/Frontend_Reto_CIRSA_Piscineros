@page "/"

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<body class="m-0">
    <div class="container-fluid cirsa-bg ">
        <div class="justify-content-center mw-85 p-4 content-blured">
            <h2 class="text-md-start mt-3">Entrar a mi cuenta</h2>
            <p class="text-light ">Inicia sesión utilizando tus credenciales para obtener acceso a nuestra plataforma</p>

            <div class="mt-5 mb-4">
                <div class="col">
                    <label class="form-label">Correo electrónico:</label>
                    <input type="email" class="form-control form-control-lg" placeholder="correo.ejemplo@correo.es" />

                    <div class="form-outline form-white mb-4" />

                    <label class="form-label">Contraseña:</label>
                    <input type="password" class="form-control form-control-lg" placeholder="ejemplo@Credencial123!" />
                </div>
            </div>

            <p class="small mb-5 pb-lg-2">
                <a class="text-white-50" href="#!">
                    ¿No recuerdas tus credenciales?
                </a>
            </p>

            <button class="btn btn-lg px-5 w-100 mb-2" type="submit" style="width: 100%; background-color: #f1bf32;">Entrar</button>
            <button class="btn btn-outline-light btn-lg px-5 w-100 mt-4" type="submit" style="width: 100%;">Crear cuenta</button>
        </div>
    </div>
</body>

